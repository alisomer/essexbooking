@model EssexBooking.Models.TelesalesViewModel

@{
    ViewBag.Title = "TelesalesList";
}

<h2>TelesalesList</h2>
@model EssexBooking.Models.TelesalesViewModel

@{
    ViewBag.Title = "BOOKING FORM";
}

<h2>BOOKING</h2>

<div id="telesaleslist">
</div>


<h2></h2>

@using (Html.BeginForm())
{
<fieldset>
 
 <legend>Personal Information</legend> 
        <div class="editor-label">
        @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
        @Html.TextBoxFor(model => model.FirstName) 
        </div>
        <div class="editor-label">
         @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
         @Html.TextBoxFor(model => model.LastName) 
         <div class="editor-label">
         @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
         @Html.EditorFor(model => model.Address) 
         </div>
         <div class="editor-label">
         @Html.LabelFor(model => model.PostCode)
        </div>
        <div class="editor-field">
         @Html.TextBoxFor(model => model.PostCode) 
         </div>
         <div class="editor-label">
         @Html.LabelFor(model => model.TelephoneNumber)
        </div>
        <div class="editor-field">
         @Html.TextBoxFor(model => model.TelephoneNumber) 
         </div>
         <div class="editor-label">
         @Html.LabelFor(model => model.PassportNumber)
        </div>
        <div class="editor-field">
         @Html.TextBoxFor(model => model.PassportNumber) 
         </div>
        <div class="editor-label">
         @Html.LabelFor(model => model.NumberOfGuests)
        </div>
        <div class="editor-field">
         @Html.TextBoxFor(model => model.NumberOfGuests) 
         </div>
         <div class="editor-label">
         @Html.LabelFor(model => model.NumberOfNights)
        </div>
        <div class="editor-field">
         @Html.DropDownListFor(model => model.NumberOfNights, new SelectList(
                  new List<Object>{ 
                       new { value = 1 , text = "7"  },
                       new { value = 2 , text = "14" },
                       
                    },
                  "value",
                  "text"
                       )
            )
         </div>
   </div>
<legend>Booking Information</legend>

<table>
<tr>
    <th>Resort Name</th>
</tr>
<tr>
<td>
    @Html.DropDownList("ResortNames", "")
</td>
</tr>
</table>

<table>
<tr>
    <th>Hotel Name</th>
</tr>
<tr>
<td>
    @Html.DropDownList("HotelNames", "")
</td>
</tr>
</table>

<table>
<tr>
<th>Extras</th>
</tr>
<tr>
<td>
    @Html.DropDownList("Extras", "")
</td>
</tr>
</table>


<table>
<tr>
    <th>Travel Type</th>
 </tr>
<tr>
<td>
    @Html.DropDownList("TravelType", "")
</td>
</tr>
</table>


    <p>
            <input type="submit" value="Create Booking" />
    </p>
    
</fieldset>    
}
<div>
    @Html.ActionLink("Return to Home page", "Index", "Home")
</div>
