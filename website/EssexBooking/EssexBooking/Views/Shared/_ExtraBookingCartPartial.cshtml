@model IEnumerable<EssexBooking.Models.ExtraBooking>


<div class="extrabookingcart">


    <h3>Your Extra Cart</h3>
    @if (Model.Count() > 0)
    {
    <table>
        <tr>
            <th>Extra Name</th>
            <th>Number</th> 
            <th>Date</th>
            <th>Price</th>
        </tr> 
        @foreach (var extrabooking in Model)
        {
        <tr extratemp_id="@extrabooking.id">
            <td>@extrabooking.Extra.name</td>
            <td>@extrabooking.participants</td>   
            <td>@extrabooking.booked_date.ToShortDateString()</td>               
            <td>&euro;@(extrabooking.Extra.price * extrabooking.participants)</td>
        </tr>
        }
    </table>
    }
</div>