@model EssexBooking.Models.Booking

<fieldset>
    <legend>Booking</legend>

    <div class="display-label">Tracking ID</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.id)
    </div>

    <div class="display-label">travel</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Travel.TravelType.name)
    </div>

    <div class="display-label">hotel </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Hotel.name)
    </div>

    <div class="display-label">start_date</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.start_date)
    </div>

    <div class="display-label">duration</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.duration)
    </div>

    <div class="display-label">single rooms</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.single_rooms)
    </div>

    <div class="display-label">double rooms</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.double_rooms)
    </div>

    <div class="display-label">Paid</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.GetPayment().amount)
    </div>

    <div class="display-label">Payment date</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.GetPayment().payment_date)
    </div>

</fieldset>

