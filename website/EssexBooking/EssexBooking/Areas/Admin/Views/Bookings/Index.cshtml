@model IEnumerable<EssexBooking.Models.Booking>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            customer_id
        </th>
        <th>
            Travel
        </th>
        <th>
            Hotel
        </th>
        <th>
            start_date
        </th>
        <th>
            duration
        </th>
        <th>
            guests
        </th>
        <th>
            booker_id
        </th>
        <th>
            Extra
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.customer_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Travel.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hotel.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.guests)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.booker_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Extra.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
