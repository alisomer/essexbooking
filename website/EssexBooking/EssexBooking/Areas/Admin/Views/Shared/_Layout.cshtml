<!DOCTYPE html>
<html>
<head>
    <title>Essex Booking &raquo; Admin &raquo; @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
    <script>
        $(function () {
            $('.admin-menu a').button();
        });
    </script>
    <style>
        #main { padding: 0; margin-left: auto; margin-right: auto; }
        #main:before, #main:after { content: ""; display: table; }
        #main:after { clear: both; }
        table, form {margin: 0 15px 9px; }
        
        p { margin: 0 15px 9px; }
        ul { padding-left: 0; }
        .page { width: 1170px; }
        .admin-menu { margin: 18px 0; }
    </style>
    @RenderSection("extraHead", required: false)
</head>
<body style="background-color:#a00;">
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Essex Booking Admin Panel</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Return to Normal Site", "Index", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
        <div id="main">
            <div style="text-align: center" class="admin-menu">
                @Html.ActionLink("Home", "Index", "Home")
                @Html.ActionLink("Users", "Index", "Users")
                @Html.ActionLink("Customers", "Index", "Customer")
                |
                @Html.ActionLink("Resorts", "Index", "Resort")
                @Html.ActionLink("Hotels", "Index", "Hotel")
	            @Html.ActionLink("Extras", "Index", "Extras")
	            @Html.ActionLink("HotelType", "Index", "HotelType")
	            @Html.ActionLink("TravelType", "Index", "TravelType")
                |
            	@Html.ActionLink("Bookings", "Index", "Bookings")
            </div>
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</@Html>
